<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
	android:versionCode="201304011" android:versionName="1.4.1" package="com.hellfire.speak2send">
    <!-- Requires Android 2.1 above -->
    <!-- <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" android:maxSdkVersion="8" /> -->
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" />
    
    <application android:icon="@drawable/icon">
        <activity android:name=".Speak2Send" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".NoteEdit" android:label="@string/edit_title"
        android:configChanges="keyboardHidden|orientation" >
        </activity>
        
        <activity android:name=".About" android:label="@string/about_title"
        android:theme="@android:style/Theme.Dialog">
        </activity>
        
        <activity android:name=".Export" android:label="@string/export_title"
        android:theme="@android:style/Theme.Dialog">
        </activity>
        
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        
        <!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14c2c37851dd80" android:name="ADMOB_PUBLISHER_ID"/> 
    </application>

    
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

</manifest> 
